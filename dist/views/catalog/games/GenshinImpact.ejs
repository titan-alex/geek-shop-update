<%- include('../../particles/header.ejs') %>

<%- include('../../particles/navigation.ejs') %>

<div class="catalog">
  <div class="catalog__head">
    <div class="catalog__title">
      <h2>Genshin Impact</h3>
    </div>
    <div class="line"></div>
  </div>
  <% for (let i = 0; i <  all_products.length; i++) { %>
  <div class="container">
    <div class="product">
      <div class="image">
        <a href="/genshinimpact/<%=  all_products[i].id %>">
          <img class="container-img" src="img/product/<%=  all_products[i].image %>" alt="ERROR"></a>
      </div>
      <div class="info">
        <h3><%= all_products[i].title %></h3>

        
        <div class="info-price">
          <span class="price"><%=  all_products[i].price %> <small>₽</small></span>


          <form method="post" action="/cart_add" class="">
            <input value="<%=  all_products[i].id %>" class="form-group__input" type="text" id="shopping-cart" name="shopping-cart" placeholder="" style="display: none;">
            <input value="<%=  all_products[i].article %>" class="form-group__input" type="text" id="article" name="article" placeholder="" style="display: none;">
            <input value="<%=  all_products[i].href %>" class="form-group__input" type="text" id="href" name="href" placeholder="" style="display: none;">
            <input value="<%=  all_products[i].title %>" class="form-group__input" type="text" id="title" name="title" placeholder="title" style="display: none;">
            <input value="<%=  all_products[i].description %>" class="form-group__input" type="text" id="description" name="description" placeholder="Описание" style="display: none;">
            <input value="<%=  all_products[i].image %>" class="form-group__input" type="text" id="image" name="image" placeholder="image" style="display: none;">
            <input value="<%=  all_products[i].price %>" class="form-group__input" type="text" id="price" name="price" placeholder="price" style="display: none;">
            <button class="product__buy" type="submit"><ion-icon name="basket"></ion-icon></button>
          </form>
        </div>
        <!-- <p class="info-description"><%=  all_products[i].description %></p> -->
      </div>
    </div>

  </div>
  <% } %>
</div>
<% if(auth){ %>
<form action="/store-add-gensh" method="post" class="form_group_all">
  <div class="form-group">
    <label class="form-group__label" for="title">Заголовок</label>
    <input value="" class="form-group__input" type="text" id="title" name="title" placeholder="title">
  </div>

  <div class="form-group">
    <label class="form-group__label" for="image">Картинка</label>
    <input value="" class="form-group__input" type="text" id="image" name="image" placeholder="image">
  </div>

  <div class="form-group">
    <label class="form-group__label" for="title">Цена</label>
    <input value="" class="form-group__input" type="text" id="price" name="price" placeholder="price">
  </div>

  <div class="form-group">
    <label class="form-group__label" for="title">Оценка</label>
    <input value="" class="form-group__input" type="text" id="stars" name="stars" placeholder="stars">
  </div>

  <div class="form-group">
    <label class="form-group__label" for="title">Описание</label>
    <input value="" class="form-group__input" type="text" id="description" name="description" placeholder="description">
  </div>

  <input class="form-button" type="submit" value="Добавить">


</form>
<form class="form_group_all" method="post" action="/upload-gensh" enctype="multipart/form-data">
  <input type="file" name="image">
  <button type="submit" name="upload">Upload</button>
</form>
<form method="post" action="/delete" class="form_group_all">
  <div class="form-group">
    <label class="form-group__label" for="title">Id</label>
    <input value="" class="form-group__input" type="text" id="id" name="id" placeholder="Id">
  </div>
  
  <input class="form-button-delete" type="submit" value="Удалить">
  
</form>
<% } %>
<%- include('../../particles/footer.ejs') %>