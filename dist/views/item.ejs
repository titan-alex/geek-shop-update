<%- include('particles/header.ejs') %>

<%- include('particles/navigation.ejs') %>

<div id="section" class="p-[20px] text-center">
  <div id="section__all" class="flex">
    <div id="section__left__box" class="inline-block">
      <img class="rounded-lg w-[400px]" src="/img/product/<%= all_products.image %>" alt="ERROR">
    </div>
    <div id="section__right__box" class="inline-block">
      <div id="section__inf__item" class="text-left  ml-[30px]">
        <h2 class="mb-[20px] mt-0 font-bold text-[24px]">
          <%= all_products.title %>
        </h2>
        <div id="section__price" class="text-[18px] font-bold">
          <p class="mb-[20px] w-[70%]"><%= all_products.price %> <small>â‚½</small></p>
        </div>
        <p class="mb-[20px] w-[70%]"><%= all_products.description %></p>
        <form method="post" action="/cart-add" class="">
          <input value="<%= all_products.id %>" type="text" id="shopping-cart" name="shopping-cart"  style="display: none">
          <input value="<%= name %>" type="text" id="name" name="name"  style="display: none">
          <input value="<%= all_products.title %>" type="text" id="title" name="title" style="display: none">
          <input value="<%= all_products.image %>" type="text" id="image" name="image" style="display: none">
          <input value="<%= all_products.description %>" type="text" id="description" name="description"  style="display: none">
          <input value="<%= all_products.price %>" type="text" id="price" name="price" style="display: none">
          <input value="<%= all_products.category %>" type="text" id="category" name="category"  style="display: none">
          <input value="<%= all_products.href %>" type="text" id="href" name="href"  style="display: none">   
          <input value="<%=  all_products.id %>" type="text" id="article" name="article" style="display: none;">
       
          <button id="product__buy" class="rounded-0 bg-white" type="submit"><ion-icon class="text-black text-[33px]" name="basket"></ion-icon></button>
        </form>
      </div>
    </div>
  </div>
</div>
<%- include('particles/footer.ejs') %>