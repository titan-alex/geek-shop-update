<div class="new__products">
  <div class="new__products__title">
    <h2>
      <ion-icon name="flame"></ion-icon>Новинки <ion-icon name="flame"></ion-icon>
      </h3>
  </div>
  <div class="line"></div>
  <% for (let i = 0; i < all_products.length; i++) { %>
  <div class="container">
    <div class="product">
      <div class="image">
        <a href="<%= all_products[i].href %>/<%=  all_products[i].id %>">
          <img class="container-img" src="img/product/<%= all_products[i].image %>" alt="ERROR"></a>
      </div>
      <div class="info">
        <h3><%= all_products[i].title %></h3>

        
        <div class="info-price">
          <span class="price"><%=  all_products[i].price %> <small>₽</small></span>


          <form method="post" action="/cart_add" class="">
            <input value="<%=  all_products[i].id %>" class="form-group__input" type="text" id="shopping-cart" name="shopping-cart" placeholder="" style="display: none;">
            <input value="<%=  all_products[i].article %>" class="form-group__input" type="text" id="article" name="article" placeholder="" style="display: none;">
            <input value="<%=  all_products[i].href %>" class="form-group__input" type="text" id="href" name="href" placeholder="href" style="display: none;">
            <input value="<%=  all_products[i].title %>" class="form-group__input" type="text" id="title" name="title" placeholder="title" style="display: none;">
            <input value="<%=  all_products[i].description %>" class="form-group__input" type="text" id="description" name="description" placeholder="Описание" style="display: none;">
            <input value="<%=  all_products[i].image %>" class="form-group__input" type="text" id="image" name="image" placeholder="image" style="display: none;">
            <input value="<%=  all_products[i].price %>" class="form-group__input" type="text" id="price" name="price" placeholder="price" style="display: none;">
            <button class="product__buy" type="submit"><ion-icon name="basket"></ion-icon></button>
          </form>
        </div>
        <!-- <p class="info-description"><%=  all_products[i].description %></p> -->
      </div>
    </div>

  </div>
  <% } %>
</div>


