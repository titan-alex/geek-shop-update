<%- include('particles/header.ejs') %>

<%- include('particles/navigation.ejs') %>

<div id="home" class="text-center bg-[#0c91c7] w-full">
  <div id="home__baner" class="flex justify-evenly items-center pt-35">
    <div id="home__inf" class="mb-0 font-gilroy">
      <h1 class="font-bold size-2xl text-darkRed">OUR.GEEK.SHOP</h1>
      <p class="text-[26px]">интернет-магазин</p>
      <p class="text-[26px]"> для настоящих гиков</p>
      <a href="/category/show" class="no-underline py-[4px] px-[15px] text-darkWhite text-[26px] leading-normal font-semibold rounded-[14px] bg-[#00c6e4] bg-center border-transparent border-solid  ">Каталог</a>
    </div>
    <img src="./img/zero_two.png" alt="ERROR" class="w-[230px] mt-[10px] ">
  </div>
</div>

<div id="mini" class="flex flex-row justify-evenly items-center text-center text-[23px] lh-[28px] my-[50px] mx-[0px] ">
  <img src="./img/sticker1.png" alt="ERROR" class="object-cover h-[110px]">
  <p>Широкий ассортимент</p>
  <img src="./img/sticker2.png" alt="ERROR" class="object-cover h-[110px]">
  <p>Доставка по всей России</p>
</div>

<div id="product__menu" class="text-center mt-[20px]">
  <div id="new__products__title" class="font-bold font-gilroy text-center w-full ">
    <h2>
      Меню категорий
      </h2>
  </div>
  <div id="line" class="bg-black h-[4px] rounded-[4px] w-[70%] mt-[30px] mx-auto opacity-30"></div>
  <div id="all__category" class="my-[30px] mx-[40px] inline-block">
    <div id="all__product" class="m-[20px] w-[290px] h-auto p-[10px] 
    inline-flex bg-[#066bb3] justify-center
    items-center text-center ">
      <h3 class=" font-bold text-center my-[10px] mr-0 ml-[15px] font-gilroy ">Все товары</h3>
      <ul>
      <% for (let i = 0; i < categories.length; i++) { %>     
        <li class="no-underline mt-[0px] mr-[0px] mb-[10px] ml-[15px] text-left color-white font-gilroy ">
          <a href="/category/index/<%= categories[i].id%>"><%= categories[i].title%></a>
        </li>     
      <% } %>
      </ul>
    </div>
    <div id="cinema" class="m-[20px] w-[290px] h-auto p-[10px] 
    inline-flex bg-[#f28524] justify-center
    items-center text-center ">
      <h3 class=" font-bold text-center my-[10px] mr-0 ml-[15px] font-gilroy ">Кинемотограф</h3>
      <ul>
        <% for (let i = 0; i < cinema.length; i++) { %>
        <li class="no-underline mt-[0px] mr-[0px] mb-[10px] ml-[15px] text-left color-white font-gilroy ">
          <a href="/category/index/<%= cinema[i].id%>"><%= cinema[i].title%></a>
        </li>
        <% } %>
      </ul>
    </div>
    <div id="games" class="m-[20px] w-[290px] h-auto p-[10px] 
    inline-flex bg-[#a52391] justify-center
    items-center text-center ">
      <h3 class=" font-bold text-center my-[10px] mr-0 ml-[15px] font-gilroy ">Игры</h3>
      <ul>
        <% for (let i = 0; i < games.length; i++) { %>     
        <li class="no-underline mt-[0px] mr-[0px] mb-[10px] ml-[15px] text-left color-white font-gilroy ">
          <a href="/catalog/show/<%= games[i].id%>"><%= games[i].title%></a>
        </li>
        <% } %>
      </ul>
    </div>
    <div id="clothes" class="m-[20px] w-[290px] h-auto p-[10px] 
    inline-flex bg-[#00a760] justify-center
    items-center text-center ">
      <h3 class=" font-bold text-center my-[10px] mr-0 ml-[15px] font-gilroy ">Одежда</h3>
      <ul>
        <% for (let i = 0; i < clothes.length; i++) { %>
        <li class="no-underline mt-[0px] mr-[0px] mb-[10px] ml-[15px] text-left color-white font-gilroy ">
          <a href="/catalog/show/<%= clothes[i].id%>"><%= clothes[i].title%></a>
        </li>
        <% } %>
      </ul>
    </div>
    <div id="other" class="m-[20px] w-[290px] h-auto p-[10px] 
    inline-flex bg-[#5d2f97] justify-center
    items-center text-center ">
      <h3 class=" font-bold text-center my-[10px] mr-0 ml-[15px] font-gilroy ">Прочее</h3>
      <ul>
        <% for (let i = 0; i < other.length; i++) { %>
        <li class="no-underline mt-[0px] mr-[0px] mb-[10px] ml-[15px] text-left color-white font-gilroy ">
          <a href="/category/index/<%= other[i].id%>"><%= other[i].title%></a>
        </li>
        <% } %>
      </ul>
    </div>
  </div>

</div>





<div id="new__products" class="text-center mt-[20px]">
  <div id="new__products__title" class="font-bold font-gilroy text-center w-full">
    <h2>
      <ion-icon name="flame"></ion-icon>Новинки <ion-icon name="flame"></ion-icon>
      </h3>
  </div>
  <div id="line" class="bg-black h-[4px] rounded-[4px] w-[70%] mt-[30px] mx-auto opacity-30"></div>
  <% for (let i = 0; i < items.length; i++) { %>
    <div id="container" class="m-[20px] w-[290px] p-[20px] inline-block">
        <div id="product" class="">
          <div id="image" class="mb-[10px]">
            <a href="/catalog/index/<%=  items[i].id %>">
              <img id="container-img" src="img/product/<%= items[i].image %>" alt="ERROR" class="h-[250px] w-full object-cover rounded-[7px]"></a>
          </div>
          <div class="info">
            <h3 class="text-[21px] font-bold mb-0 "><%= items[i].title %></h3>
    
            
            <div id="info-price" class="flex justify-between items-center mt-[10px]">
              <span id="price" class="font-bold text-[18px] "><%=  items[i].price %> <small>₽</small></span>
    
    
              <form method="post" action="/cart-add" id="add-to-cart" class="border-0 w-[40px] h-[40px] flex items-center justify-center ">
                <input value="<%=  items[i].id %>" class="form-group__input" type="text" id="shopping-cart" name="shopping-cart" placeholder="" style="display: none;">
                <input value="<%= name %>" class="form-group__input" type="text" id="name" name="name"  style="display: none">
                <input value="<%=  items[i].id %>" class="form-group__input" type="text" id="article" name="article" placeholder="" style="display: none;">
                <input value="<%=  items[i].href_id %>" class="form-group__input" type="text" id="href" name="href" placeholder="href" style="display: none;">
                <input value="<%=  items[i].title %>" class="form-group__input" type="text" id="title" name="title" placeholder="title" style="display: none;">
                <input value="<%=  items[i].description %>" class="form-group__input" type="text" id="description" name="description" placeholder="Описание" style="display: none;">
                <input value="<%= items[i].type %>" class="form-group__input" type="text" id="type" name="type"  style="display: none">
                <input value="<%=  items[i].image %>" class="form-group__input" type="text" id="image" name="image" placeholder="image" style="display: none;">
                <input value="<%=  items[i].price %>" class="form-group__input" type="text" id="price" name="price" placeholder="price" style="display: none;">
                <button id="product__buy" class="border-0 bg-white" type="submit"><ion-icon  class="text-black text-[33px]" name="basket"></ion-icon></button>
              </form>
            </div>
            <!-- <p class="info-description"><%=  items[i].description %></p> -->
          </div>
        </div>
      </div>  
        <% if(items.lenght == 4){break}%>
      
      <% } %>
  
</div>


<%- include('particles/footer.ejs') %>