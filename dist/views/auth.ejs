<%- include('particles/header.ejs') %>

<%- include('particles/navigation.ejs') %>
<div class="form_auth_all">

  <form action="/login" method="post" class="form_auth">
    <div class="form-group">
      <label class="form-group__label" for="name">Имя пользователя</label>
      <input class="form-group__input" type="text" id="name" name="name" placeholder="Имя пользователя" required>
    </div>

    <div class="form-group">
      <label class="form-group__label" for="password">Пароль</label>
      <input class="form-group__input" type="password" id="password" name="password" placeholder="Пароль" required>
    </div>

    <input class="form-button" type="submit" value="Войти">
  </form>

  <form action="/register" method="post" class="form_auth">
    <div class="form-group">
      <label class="form-group__label" for="name">Имя пользователя</label>
      <input class="form-group__input" type="text" id="name" name="name" placeholder="Имя пользователя" required>
    </div>

    <div class="form-group">
      <label class="form-group__label" for="email">Электронная почта</label>
      <input class="form-group__input" type="email" id="email" name="email" placeholder="Электронная почта" required>
    </div>

    <div class="form-group">
      <label class="form-group__label" for="password">Пароль</label>
      <input class="form-group__input" type="password" id="password" name="password" placeholder="Пароль" required>
    </div>

    <input class="form-button" onclick="mySubmit(this)" type="submit" value="Зарегистрироваться">
  </form>
</div>
<%- include('particles/footer.ejs') %>