<%- include('particles/header.ejs') %>

<%- include('particles/navigation.ejs') %>

<div class="catalog">
  <div class="catalog__baner">
    <h1>Рад познакомиться, мой дорогой друг</h1>
    <img src="./img/bodyguard.png" alt="ERROR">
  </div>
  <div class="catalog__head">
    <div class="catalog__title">
      <h2>Категории</h3>
    </div>
    <div class="line"></div>
  </div>
  <% for (let i = 0; i < category.length; i++) { %>
  <div class="container">
    <div class="product">
      <div class="image">
        <a href="<%= category[i].href %>">
          <img class="container-img" src="img/category/catalog/<%= category[i].image %>" alt="ERROR"></a>
      </div>
      <div class="info">
        <h3><%= category[i].title %></h3>
      </div>
    </div>

  </div>
  <% } %>
</div>

<form action="/store" method="post" class="form_group_all">
  <div class="form-group">
    <label class="form-group__label" for="title">Заголовок</label>
    <input value="" class="form-group__input" type="text" id="title" name="title" placeholder="title">
  </div>

  <div class="form-group">
    <label class="form-group__label" for="image">Картинка</label>
    <input value="" class="form-group__input" type="text" id="image" name="image" placeholder="image">
  </div>

  <div class="form-group">
    <label class="form-group__label" for="title">Путь</label>
    <input value="" class="form-group__input" type="text" id="href" name="href" placeholder="href">
  </div>

  <div class="form-group">
    <label class="form-group__label" for="title">Тип</label>
    <input value="" class="form-group__input" type="text" id="typ" name="typ" placeholder="typ">
  </div>


  <input class="form-button" type="submit" value="Добавить">


</form>

<form method="post" action="/delete" class="form_group_all">
  <div class="form-group">
    <label class="form-group__label" for="title">Id</label>
    <input value="" class="form-group__input" type="text" id="id" name="id" placeholder="Id">
  </div>

  <input class="form-button-delete" type="submit" value="Удалить">
</form>

<%- include('particles/footer.ejs') %>