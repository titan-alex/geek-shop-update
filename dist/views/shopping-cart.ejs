<%- include('particles/header.ejs') %>

<%- include('particles/navigation.ejs') %>

<div id="catalog" class="text-center">
  <div class="catalog__head">
    <div id="catalog__title" class="mt-0">
      <h2 class="font-black">Корзина</h3>
    </div>
    <div id="line" class="bg-black h-[4px] rounded-[4px] w-[70%] mt-[30px] mx-auto opacity-30"></div>
  </div>

  <% if(shopping_cart.length==0) { %>
  <div class="m-[20px] w-[290px] inline-block" id="cart">
    <div id="empty__cart__image" class="mb-[20px]">
      <ion-icon id="empty__cart__container-img" name="cart" class="h-[250px] w-full object-cover raunded-[7px] opacity-40 "></ion-icon>
    </div>
    <div class="empty__cart__info">
      <h3 class="text-stone-200 font-black mt-[10px] text-[30px]">Ваша корзина пуста</h3>
    </div>
  </div>
  <% } %>
  <% for (let i = 0; i < shopping_cart.length; i++) { %>
  <div id="container" class="m-[20px] w-[290px] p-[20px] inline-block">
    <div class="product">
      <div id="image" class="mb-[10px]">
        <a href="/catalog/index/<%= shopping_cart[i].article %>">
          <img id="container-img" src="img/product/<%= shopping_cart[i].image %>" alt="ERROR"></a>
      </div>
      <div class="info">
        <h3 class="text-[23px] font-bold mb-0"><%= shopping_cart[i].title %></h3>
      
        <div id="info-price" class="flex justify-between items-center mt-[10px]">
          <span id="price" class="font-bold text-[18px]"><%= shopping_cart[i].price %> <small>₽</small></span>
          <!-- <button class="add-to-cart"><ion-icon name="cart-outline"></ion-icon></button> -->

          <form method="post" action="/cart-add">
            <input value="<%= shopping_cart[i].id %>"  type="text" id="shopping-cart" name="shopping-cart"  style="display: none;">
            <input value="<%= shopping_cart[i].title %>"  type="text" id="title" name="title" style="display: none;">
            <input value="<%= shopping_cart[i].description %>"  type="text" id="description" name="description" style="display: none;">
            <input value="<%= shopping_cart[i].image %>"  type="text" id="image" name="image" style="display: none;">
            <input value="<%= shopping_cart[i].price %>"  type="text" id="price" name="price" style="display: none;">
            <button id="product__buy" class="rounded-0 bg-white" type="submit"><ion-icon class=" text-white text-[33px]" name="basket"></ion-icon></button>
          </form>

          <form method="post" action="/cart-del" >
            <input value="<%= shopping_cart[i].id %>"  type="text" id="id" name="id"  style="display: none;">
            <button id="product__buy" class="rounded-0 bg-white" type="submit"><ion-icon class=" text-white text-[33px]" name="trash"></ion-icon></button>
          </form>
        </div>
      </div>
    </div>

  </div>
  <% } %>
</div>
<%- include('particles/footer.ejs') %>