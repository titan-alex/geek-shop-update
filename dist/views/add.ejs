<form action="/product-add" method="post" id="form_group_all" class="ml-auto mr-auto bg-black text-center w-full">
  <h1 id="contacts__header" class="text-white font-roboto text-center font-bold">Добавить товар</h1>

  <div id="form-group" class="mb-[20px]">
    <label id="form-group__label" class="block mb-[3px] text-white font-bold tracking-[3.5px]" for="title">Заголовок</label>
    <input value="" class="p-[7px]" type="text" id="title" name="title" placeholder="title">
  </div>

  <div id="form-group" class="mb-[20px]">
    <label id="form-group__label" class="block mb-[3px] text-white font-bold tracking-[3.5px]" for="image">Картинка</label>
    <input value="" class="p-[7px]" type="text" id="image" name="image" placeholder="image">
  </div>

  <div id="form-group" class="mb-[20px]">
    <label id="form-group__label" class="block mb-[3px] text-white font-bold tracking-[3.5px]" for="description">Описание</label>
    <input value="" class="p-[7px]" type="text" id="description" name="description" placeholder="description">
  </div>

  <div id="form-group" class="mb-[20px]">
    <label id="form-group__label" class="block mb-[3px] text-white font-bold tracking-[3.5px]" for="price">Цена</label>
    <input value="" class="p-[7px]" type="text" id="price" name="price" placeholder="price">
  </div>

  <div id="form-group" class="mb-[20px]">
    <label id="form-group__label" class="block mb-[3px] text-white font-bold tracking-[3.5px]" for="category_id">Категория</label>
    <input value="" class="p-[7px]" type="text" id="category_id" name="category_id" placeholder="category_id">
  </div>

  <input id="form-button" class="text-white p-[7px] bg-blue m-[20px] hover: cursor-pointer" type="submit" value="Добавить">

</form>

<form method="post" action="/product-del" id="form_group_all" class="ml-auto mr-auto bg-black text-center w-full">
  <h1 id="contacts__header" class="text-white font-roboto text-center font-bold">Удалить товар</h1>

  <div id="form-group" class="mb-[20px]">
    <label id="form-group__label" class="block mb-[3px] text-white font-bold tracking-[3.5px]" for="id">Id</label>
    <input value="" class="p-[7px]" type="text" id="id" name="id" placeholder="Id">
  </div>

  <input id="form-button-delete" class=" m-[20px] text-white p-[7px] bg-red hover: cursor-pointer" type="submit" value="Удалить">
</form>

