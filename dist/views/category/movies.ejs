<%- include('../particles/header.ejs') %>

<%- include('../particles/navigation.ejs') %>

<div class="catalog">
  <div class="catalog__head">
    <div class="catalog__title">
      <h2>Фильмы</h3>
    </div>
    <div class="line"></div>
  </div>
  <% for (let i = 0; i < movies.length; i++) { %>
  <div class="container">
    <div class="product">
      <div class="image">
        <a href="/movies/<%= movies[i].id %>">
          <img class="container-img" src="img/movies/<%= movies[i].image %>" alt="ERROR"></a>
      </div>
      <div class="info">
        <h3><%= movies[i].title %></h3>
        <div class="info-price">
          <span class="price"><%= movies[i].prise %> <small>₽</small></span>
          <button class="add-to-cart">
            <ion-icon name="cart-outline"></ion-icon>
          </button>
        </div>
      </div>
    </div>

  </div>
  <% } %>
</div>

<%- include('../particles/footer.ejs') %>