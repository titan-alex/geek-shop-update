<%- include('../particles/header.ejs') %>

<%- include('../particles/navigation.ejs') %>

<div id="catalog" class="text-center ">
  <div id="catalog__baner" class="bg-[#0c91c7] my-[10px] mx-0 w-full flex justify-evenly items-center">
    <h1 class="font-bold ">Рад познакомиться, мой дорогой друг</h1>
    <img class="w-[300px]" src="../img/bodyguard.png" alt="ERROR">
  </div>
  <div class="catalog__head">
    <div id="catalog__title" class="mt-0">
      <h2 class="font-black ">Категории</h3>
    </div>
    <div id="line" class="bg-black h-[4px] rounded w-[70%] mt-[30px] opacity-30 mx-auto "></div>
  </div>
  <% for (let i = 0; i < categories.length; i++) { %>
  <div id="container" class="m-[20px] w-[290px] p-[20px] inline-block">
    <div class="product">
      <div id="image" class="mb-[10px]">
        <a href="/category/index/<%= categories[i].id %>">
          <input value="<%=  categories[i].id %>" type="text" id="id" name="id" style="display: none;">
          <img id="container-img" class="h-[250px] w-full object-cover rounded" src="../img/category/catalog/<%= categories[i].image %>" alt="ERROR"></a>
      </div>
      <div class="info">
        <h3 class="text-[21px] font-bold mb-0"><%= categories[i].title %></h3>
      </div>
    </div>

  </div>
  <% } %>
</div>
<% if(name == 'Titan Alex'){%>
<form action="/store" method="post" id="form_group_all" class="ml-auto mr-auto bg-black text-center w-full">
  <h1 id="contacts__header" class="text-white font-roboto text-center font-bold">Добавить категорию</h1>

  <div id="form-group" class="mb-[20px]">
    <label id="form-group__label" class="block mb-[3px] text-white font-bold tracking-[3.5px]" for="title">Заголовок</label>
    <input value="" id="form-group__input" class="p-[7px]" type="text" id="title" name="title" placeholder="title">
  </div>

  <div id="form-group" class="mb-[20px]">
    <label id="form-group__label" class="block mb-[3px] text-white font-bold tracking-[3.5px]" for="image">Картинка</label>
    <input value="" id="form-group__input" class="p-[7px]" type="text" id="image" name="image" placeholder="image">
  </div>

  <div id="form-group" class="mb-[20px]">
    <label id="form-group__label" class="block mb-[3px] text-white font-bold tracking-[3.5px]" for="parent_id">Родитель</label>
    <input value="" id="form-group__input" class="p-[7px]" type="text" id="parent_id" name="parent_id" placeholder="parent_id">
  </div>


  <input id="form-button" class="text-white p-[7px] bg-blue m-[20px] hover: cursor-pointer" type="submit" value="Добавить">


</form>

<form method="post" action="/delete" id="form_group_all" class="ml-auto mr-auto bg-black text-center w-full">
  <h1 id="contacts__header" class="text-white font-roboto text-center font-bold">Удалить категорию</h1>

  <div id="form-group" class="mb-[20px]">
    <label id="form-group__label" class="block mb-[3px] text-white font-bold tracking-[3.5px]" for="title">Id</label>
    <input value="" id="form-group__input" class="p-[7px]" type="text" id="id" name="id" placeholder="Id">
  </div>

  <input id="form-button-delete" class=" m-[20px] text-white p-[7px] bg-red hover: cursor-pointer" type="submit" value="Удалить">
</form>
<% }%>
<%- include('../particles/footer.ejs') %>