<%- include('./../particles/header.ejs') %>

<%- include('./../particles/navigation.ejs') %>

<div id="catalog" class="text-center ">
  <div class="catalog__head">
    <div id="catalog__title" class="mt-0">
      <h2 class="font-black ">Genshin Impact</h3>
      </div>
      <div id="line" class="bg-black h-[4px] rounded w-[70%] mt-[30px] opacity-30 mx-auto "></div>
    </div>
  <% for (let i = 0; i <  items.length; i++) { %>
    <div id="container" class="m-[20px] w-[290px] p-[20px] inline-block">
      <div class="product">
        <div id="image" class="mb-[10px]">
        <a href="/genshinimpact/<%=  items[i].id %>">
          <img id="container-img" class="h-[250px] w-full object-cover rounded"  src="img/product/<%=  items[i].image %>" alt="ERROR"></a>
      </div>
      <div class="info">
        <h3 class="text-[21px] font-bold mb-0"><%= items[i].title %></h3>

        
        <div id="info-price" class="flex justify-between items-center mt-[10px]">
          <span id="price" class="font-bold text-[18px] "><%=  items[i].price %> <small>₽</small></span>


          <form method="post" action="/cart-add" >
            <input value="<%=  items[i].id %>"  type="text" id="shopping-cart" name="shopping-cart" placeholder="" style="display: none;">
            <input value="<%=  items[i].article %>"  type="text" id="article" name="article" placeholder="" style="display: none;">
            <input value="<%=  items[i].href %>"  type="text" id="href" name="href" placeholder="" style="display: none;">
            <input value="<%=  items[i].title %>"  type="text" id="title" name="title" placeholder="title" style="display: none;">
            <input value="<%=  items[i].description %>"  type="text" id="description" name="description" placeholder="Описание" style="display: none;">
            <input value="<%=  items[i].image %>"  type="text" id="image" name="image" placeholder="image" style="display: none;">
            <input value="<%=  items[i].price %>"  type="text" id="price" name="price" placeholder="price" style="display: none;">
            <button id="product__buy" class="border-0 bg-white" type="submit"><ion-icon  class="text-black text-[33px]" name="basket"></ion-icon></button>
          </form>
        </div>
        <!-- <p class="info-description"><%=  items[i].description %></p> -->
      </div>
    </div>

  </div>
  <% } %>
</div>
<%- include('./../particles/footer.ejs') %>