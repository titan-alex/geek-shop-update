<%- include('../particles/header.ejs') %>

<%- include('../particles/navigation.ejs') %>

<div class="section">
    <h2 class="section__title">
        <%= categories.name %>
    </h2>
</div>

<form action="/catUpdate" method="post">
    <div class="form-group">
        <input value="<%= categories.id %>" class="form-group__input" type="hidden" id="id" name="id">
    </div>
    <div class="form-group">
        <label class="form-group__label" for="name">name</label>
        <input value="<%= categories.name %>" class="form-group__input" type="text" id="name" name="name"
            placeholder="name">
    </div>

    <input class="form-button" type="submit" value="Update">
</form>

<form action="/catDelete" method="post">
    <div class="form-group">
        <input value="<%= categories.id %>" class="form-group__input" type="hidden" id="id" name="id">
    </div>

    <input class="form-button" type="submit" value="Delete">
</form>

<%- include('../particles/footer.ejs') %>