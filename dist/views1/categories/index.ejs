<%- include('../particles/header.ejs') %>

<%- include('../particles/navigation.ejs') %>

<form action="/catStore" method="post">
    <div class="form-group">
        <label class="form-group__label" for="name">name</label>
        <input class="form-group__input" type="text" id="name" name="name" placeholder="name">
    </div>

    <input class="form-button" type="submit" value="Create">
</form>

<% for (let i = 0; i < categories.length; i++) { %>

    <div class="section">
        <a href="/categories/<%= categories[i].id %>">
            <h2 class="section__title"><%= categories[i].name %></h2>
        </a>
    </div>

<% } %>

